params {
    // Run parameters
    input = "/hpc/pmc_vanheesch/projects/Marina/dev/nf_rna_pipeline_sprint1/nf_rna_pipeline/test/documentation/test_samplesheet.csv"
    project_folder = "/hpc/pmc_vanheesch/projects/Marina/dev/nf_rna_pipeline_sprint1/"
    outdir         = "${params.project_folder}/quick_test/"

    // Toggle modules
    fusions  = false
    assembly = false
    merge    = false
    expression_mode = "sq" 

    // Optional parameters
    created_transcriptome_expression = true // Use the stringtie assembled gtf as reference transcriptome
    //sample_gtf_list   = "${params.outdir}/stringtie/gtflist.txt"
    output_basename = "test" 

    // Reference parameters (optional)
    species        = "Homo_sapiens"
    genome_version = "GRCh38"
    annot_version  = "gencode_48"

    //Set paths (optional)
    resource_folder  = "/hpc/pmc_vanheesch/shared_resources"
    container_folder = "/hpc/local/Rocky8/pmc_vanheesch/singularity_images/"

    // Set reference files
    star_index_basedir      = "${params.resource_folder}/GENOMES/${params.species}.${params.genome_version}/${params.annot_version}/STAR"
    reference_gtf           = "${params.resource_folder}/GENOMES/${params.species}.${params.genome_version}/${params.annot_version}/annotation/${params.species}.${params.genome_version}.${params.annot_version}.gtf"

    reference_transcriptome = "${params.resource_folder}/GENOMES/${params.species}.${params.genome_version}/${params.annot_version}/${params.species}.${params.genome_version}.cdna.all.fa"
    //refseq_gtf              = "${resource_folder}/GENOMES/${species}.${genome_version}/${annot_version}/annotation/${species}.${genome_version}.p13"
    masked_fasta            = "${params.resource_folder}/GENOMES/${params.species}.${params.genome_version}/${params.annot_version}/${params.species}.${params.genome_version}.dna_sm.primary_assembly.fa"
    twobit                  = "${params.resource_folder}/GENOMES/${params.species}.${params.genome_version}/${params.annot_version}/${params.species}.${params.genome_version}.dna.primary_assembly.2bit"
    kallisto_index          = "${params.resource_folder}/GENOMES/${params.species}.${params.genome_version}/${params.annot_version}/kallisto/0.44/kallisto_index"
    arriba_reference        = "${params.resource_folder}/GENOMES/${params.species}.${params.genome_version}/${params.annot_version}/Arriba"

    // Salmon index for testing purposes, remove later
    //salmon_index_test = "/hpc/pmc_vanheesch/projects/evanderwerf/nf_rna_pipeline_project/salmon_index"
}

// Add general singularity run options for HPC
singularity {
    runOptions = '-B "/hpc:/hpc" --env "LC_ALL=C.UTF-8"'
}

// Set containers each process
// TODO: when pipeline is done try to create one big container
process {
    withName:fastp {
        container = "${params.container_folder}/fastp_0.23.4--hadf994f_2.sif"
    }
    withName:checkStrand {
        container = "${params.container_folder}/howarewestrandedhere-1.0.1a.sif"
    }
    withName:STAR {
        container = "${params.container_folder}/STAR-2.7.8a.sif"
    }
    withLabel:samtools {
        container = "${params.container_folder}/samtools-1.12.sif"
    }
    withName:stringtie {
        container = "${params.container_folder}/stringtie-3.0.sif"
    }
    withName:transcriptome_fasta{
        container = "${params.container_folder}/gffread-0.12.6.sif"
    }
    withLabel:compareGTF {
        container = "${params.container_folder}/gffcompare-0.12.6.sif"
    }
    withName:filterAnnotate {
        container = "${params.container_folder}/r_rna_filter-4.1.2.sif"
    }
    withLabel:fusions {
        container = "${params.container_folder}/arriba-2.4.0.sif"
    }
    withLabel:salmon {
        container = "${params.container_folder}/salmon-1.8.0.sif"
    }
    withLabel:salmon_tables {
        container = "${params.container_folder}/nf_rna_seq_r-1.0.0.sif"
    }
    withLabel:featurecounts {
        container = "${params.container_folder}/subread-2.0.2.sif"
    }
    withLabel:multiqc {
        container = "${params.container_folder}/multiqc-1.30.sif"
    }

}